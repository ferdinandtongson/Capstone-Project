<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- clipToPadding and scrollbarStyle allows for overscroll shadow at the the top and bottom of
    the recycler list without the shadow being attached to the padding -->
    <style name="GymRat.Card" parent="Theme.AppCompat.Light">
        <item name="android:layout_margin">@dimen/card_main_layoutMargin</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">@dimen/card_cornerRadius</item>
    </style>

    <style name="GymRat.Card.InsideFrame" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/fragment_innerFrame_background</item>
    </style>


    <style name="GymRat.Card.ImageView.Profile" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">@dimen/card_imageProfile</item>
        <item name="android:layout_height">@dimen/card_imageProfile</item>
        <item name="android:layout_marginTop">@dimen/card_layoutTop</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:src">@drawable/gym_rat_black_48dp</item>
    </style>

    <style name="GymRat.Card.ImageView.Icon" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">@dimen/card_imageIcon</item>
        <item name="android:layout_height">@dimen/card_imageIcon</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="GymRat.Card.TextView" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/textColor_default</item>
    </style>

    <style name="GymRat.Card.TextView.Info" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="GymRat.Card.TextView.Name" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/textSize_large</item>
        <item name="android:layout_marginTop">@dimen/card_layoutTop</item>
    </style>

    <style name="GymRat.Card.TextView.Exercise" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="GymRat.Card.TextView.Exercise.Sets" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">240dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

</resources>