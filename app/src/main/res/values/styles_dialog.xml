<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GymRat.Dialog" parent="Theme.AppCompat.Light">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/item_background</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="GymRat.Dialog.TextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:textColor">@color/textColor_default</item>
    </style>

    <style name="GymRat.Dialog.TextView.Large" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/textSize_large</item>
        <item name="android:textColor">@color/textColor_default</item>
    </style>

    <style name="GymRat.Dialog.TextView.Small" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:textColor">@color/textColor_default</item>
    </style>

    <style name="GymRat.Dialog.TextView.Button" parent="Theme.AppCompat.Light">
        <item name="android:paddingTop">@dimen/textView_button_padding</item>
        <item name="android:paddingStart">@dimen/textView_button_padding_sides</item>
        <item name="android:paddingEnd">@dimen/textView_button_padding_sides</item>
        <item name="android:paddingBottom">@dimen/textView_button_padding</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:textColor">@color/textColor_default</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/button_border</item>
    </style>

    <style name="GymRat.Dialog.TextView.Button.Small" parent="GymRat.Dialog.TextView.Button">
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>

    <style name="GymRat.Dialog.EditText" parent="GymRat.Dialog.TextView.Large">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/bg_white</item>
    </style>

    <style name="GymRat.Dialog.Spinner" parent="Theme.AppCompat.Light">
        <item name="android:paddingTop">@dimen/spinner_padding</item>
        <item name="android:paddingBottom">@dimen/spinner_padding</item>
        <item name="android:background">@drawable/spinner_border_arrow</item>
    </style>

    <style name="GymRat.Dialog.Exercise.Text" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GymRat.Dialog.Exercise.Text.Title" parent="GymRat.Dialog.Exercise.Text">
        <item name="android:background">@drawable/bg_blue</item>
    </style>

    <style name="GymRat.Dialog.Exercise.Text.Edit.Primary" parent="GymRat.Dialog.Exercise.Text">
        <item name="android:layout_marginStart">62dp</item>
        <item name="android:textColorHint">@color/darkgray</item>
        <item name="android:background">@drawable/bg_white</item>
    </style>

    <style name="GymRat.Dialog.Exercise.Text.Edit" parent="GymRat.Dialog.Exercise.Text">
        <item name="android:textColorHint">@color/darkgray</item>
        <item name="android:background">@drawable/bg_white</item>
    </style>

    <style name="GymRat.Dialog.Exercise.Text.Set" parent="GymRat.Dialog.Exercise.Text">
        <item name="android:layout_width">50dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/button_border</item>
    </style>

    <style name="GymRat.Dialog.Exercise.Text.Data" parent="GymRat.Dialog.Exercise.Text">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/bg_blue</item>
    </style>

    <style name="GymRat.Dialog.Exercise.Text.Separator" parent="GymRat.Dialog.Exercise.Text">
        <item name="android:padding">2dp</item>
    </style>

    <style name="GymRat.Dialog.InsideFrame" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/bg_white</item>
    </style>

    <style name="GymRat.Dialog.EditText.Measure.Data" parent="GymRat.Card.TextView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColorHint">@color/darkgray</item>
        <item name="android:background">@drawable/bg_white</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="GymRat.Dialog.TextView.Measure.Data" parent="GymRat.Card.TextView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/powderBlueish_60</item>
    </style>

    <style name="GymRat.Dialog.TextView.Measure.Data.Change" parent="GymRat.Dialog.TextView.Measure.Data">
        <item name="android:layout_marginStart">25dp</item>
    </style>

</resources>