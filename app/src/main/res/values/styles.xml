<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GymRatTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/powderOrangeish</item>
        <item name="colorAccent">@color/powderBlueish</item>
        <item name="colorControlNormal">@color/orange</item>
        <item name="colorControlActivated">@color/powderOrangeish</item>
        <item name="colorControlHighlight">@color/powderBlueish</item>
        <item name="android:windowBackground">@drawable/sun_background</item>
    </style>

</resources>
