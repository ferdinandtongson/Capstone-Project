<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GymRat.Item" parent="Theme.AppCompat.Light">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/item_background</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="GymRat.Item.TextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:textColor">@color/textColor_default</item>
    </style>

    <style name="GymRat.Item.TextView.Large" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/textSize_large</item>
        <item name="android:textColor">@color/textColor_default</item>
    </style>


    <style name="GymRat.Item.ImageView.Profile" parent="Theme.AppCompat.Light">
        <item name="android:src">@drawable/gym_rat_black_48dp</item>
        <item name="civ_border_width">2dp</item>
        <item name="civ_border_color">@color/item_profile_outline</item>
    </style>

    <style name="GymRat.Item.ImageView.Profile.Normal" parent="GymRat.Item.ImageView.Profile">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">54dp</item>
    </style>

    <style name="GymRat.Item.ImageView.Profile.Small" parent="GymRat.Item.ImageView.Profile">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

</resources>