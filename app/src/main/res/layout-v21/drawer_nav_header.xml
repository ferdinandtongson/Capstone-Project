<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/drawerNav_imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@color/powderOrangeish_90" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/drawerNav_imgIcon"
            android:transitionName="@string/trans_navIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:paddingTop="16dp"
            app:srcCompat="@drawable/gym_rat_black_right_48dp" />

        <TextView
            android:id="@+id/drawerNav_txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/drawerNav_imgIcon"
            android:layout_toRightOf="@id/drawerNav_imgIcon"
            android:paddingTop="16dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/app_title"/>

        <TextView
            android:id="@+id/drawerNav_txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/drawerNav_imgIcon"
            android:layout_toRightOf="@id/drawerNav_imgIcon"
            android:layout_below="@id/drawerNav_txtTitle"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="@string/app_subtitle"/>

    </RelativeLayout>
</RelativeLayout>