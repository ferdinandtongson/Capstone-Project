<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choiceCardView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/card_defaultBackground"
    style="@style/GymRat.Card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView android:id="@+id/txtRoutineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            style="@style/GymRat.Card.TextView.Name"
            />
<!--
            android:textSize="18sp"
            android:textColor="@color/white"
-->

        <RelativeLayout
            android:id="@+id/relSessionsBrief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/txtRoutineName"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="#40FFFFFF"
            >


            <!-- Measurement Title -->
            <TextView
                android:id="@+id/txtLast"
                android:layout_height="wrap_content"
                android:text="@string/routineCard_sets"
                android:contentDescription="@string/description_card_txtSets"
                android:visibility="visible"
                style="@style/GymRat.Card.TextView.Exercise.Sets"
                />

            <!-- Exercise 01 -->
            <TextView
                android:id="@+id/txtExercise01"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtLast"
                style="@style/GymRat.Card.TextView.Exercise"
                />

            <TextView
                android:id="@+id/txtSet01"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtLast"
                style="@style/GymRat.Card.TextView.Exercise.Sets"
                />

            <!-- Exercise 02 -->
            <TextView
                android:id="@+id/txtExercise02"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise01"
                style="@style/GymRat.Card.TextView.Exercise"
                />

            <TextView
                android:id="@+id/txtSet02"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise01"
                style="@style/GymRat.Card.TextView.Exercise.Sets"
                />

            <!-- Exercise 03 -->
            <TextView
                android:id="@+id/txtExercise03"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise02"
                style="@style/GymRat.Card.TextView.Exercise"
                />

            <TextView
                android:id="@+id/txtSet03"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise02"
                style="@style/GymRat.Card.TextView.Exercise.Sets"
                />

            <!-- Exercise 04 -->
            <TextView
                android:id="@+id/txtExercise04"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise03"
                style="@style/GymRat.Card.TextView.Exercise"
                />

            <TextView
                android:id="@+id/txtSet04"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise03"
                style="@style/GymRat.Card.TextView.Exercise.Sets"
                />

            <!-- Exercise 05 -->
            <TextView
                android:id="@+id/txtExercise05"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise04"
                style="@style/GymRat.Card.TextView.Exercise"
                />

            <TextView
                android:id="@+id/txtSet05"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise04"
                style="@style/GymRat.Card.TextView.Exercise.Sets"
                />

            <!-- Exercise 06 -->
            <TextView
                android:id="@+id/txtExercise06"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise05"
                style="@style/GymRat.Card.TextView.Exercise"
                />

            <TextView
                android:id="@+id/txtSet06"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise05"
                style="@style/GymRat.Card.TextView.Exercise.Sets"
                />

            <!-- Exercise 07 -->
            <TextView
                android:id="@+id/txtExercise07"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise06"
                style="@style/GymRat.Card.TextView.Exercise"
                />

            <TextView
                android:id="@+id/txtSet07"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise06"
                style="@style/GymRat.Card.TextView.Exercise.Sets"
                />

            <!-- Exercise 08 -->
            <TextView
                android:id="@+id/txtExercise08"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise07"
                style="@style/GymRat.Card.TextView.Exercise"
                />

            <TextView
                android:id="@+id/txtSet08"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise07"
                style="@style/GymRat.Card.TextView.Exercise.Sets"
                />

            <!-- Exercise 09 -->
            <TextView
                android:id="@+id/txtExercise09"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise08"
                style="@style/GymRat.Card.TextView.Exercise"
                />

            <TextView
                android:id="@+id/txtSet09"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise08"
                style="@style/GymRat.Card.TextView.Exercise.Sets"
                />

            <!-- Exercise 10 -->
            <TextView
                android:id="@+id/txtExercise10"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/txtExercise09"
                style="@style/GymRat.Card.TextView.Exercise"
                />

            <TextView
                android:id="@+id/txtSet10"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtExercise09"
                style="@style/GymRat.Card.TextView.Exercise.Sets"
                />

        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>