<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/diaDelete_txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/GymRat.Dialog.TextView"
        />

    <View
        android:id="@+id/line01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/diaDelete_txtTitle"
        android:background="@color/black"/>


    <TextView
        android:id="@+id/diaDelete_txtDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line01"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:text="@string/delete"
        style="@style/GymRat.Dialog.TextView.Button.Small"
        />

    <TextView
        android:id="@+id/diaDelete_txtCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/diaDelete_txtDelete"
        android:layout_below="@id/line01"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:text="@string/cancel"
        style="@style/GymRat.Dialog.TextView.Button.Small"
        />

    <CheckBox
        android:id="@+id/diaDelete_chkNoShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/diaDelete_txtCancel"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/msg_do_not_show_warning"
        android:contentDescription="@string/msg_do_not_show_warning"
        />

</RelativeLayout>