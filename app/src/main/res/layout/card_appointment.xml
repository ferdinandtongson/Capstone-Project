<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choiceCardView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/card_activeBackground"
    style="@style/GymRat.Card">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/cardAppointment_txtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GymRat.Card.TextView.Info"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cardAppointment_imgProfile"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/card_profile_outline"
            android:contentDescription="@string/description_imgProfile"
            style="@style/GymRat.Card.ImageView.Profile"/>

        <TextView
            android:id="@+id/cardAppointment_txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/cardAppointment_imgProfile"
            style="@style/GymRat.Card.TextView.Name"/>

        <TextView
            android:id="@+id/cardAppointment_txtRoutine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/cardAppointment_imgProfile"
            android:layout_below="@id/cardAppointment_txtName"
            android:text="Routine: Some Routine"
            style="@style/GymRat.Card.TextView.Name"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>