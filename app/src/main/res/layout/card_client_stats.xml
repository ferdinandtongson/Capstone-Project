<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choiceCardView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/card_activeBackground"
    style="@style/GymRat.Card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView android:id="@+id/cardStats_txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:textSize="10sp"
            android:textColor="@color/black"
            />

        <TextView android:id="@+id/cardStats_txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/cardStats_txtTime"
            android:layout_alignParentEnd="true"
            style="@style/GymRat.Card.TextView"
            />


        <RelativeLayout
            android:id="@+id/cardStats_relNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardStats_txtDate"
            android:paddingTop="3dp"
            android:background="#40FFFFFF"
            >

            <!-- Measurement Title -->
            <TextView
                android:id="@+id/cardStats_txtLast"
                android:layout_height="wrap_content"
                android:text="@string/measurement_detail_last"
                style="@style/GymRatTheme.Measure.History.Text.Title.Start"/>

            <TextView
                android:id="@+id/cardStats_txtChangeLast"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cardStats_txtLast"
                android:text="@string/measurement_detail_delta_pre"
                style="@style/GymRatTheme.Measure.History.Text.Title"/>

            <TextView
                android:id="@+id/cardStats_txtChangeStart"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cardStats_txtChangeLast"
                android:text="@string/measurement_detail_delta_start"
                style="@style/GymRatTheme.Measure.History.Text.Title"/>

            <!-- Measurement Weight -->
            <TextView
                android:id="@+id/cardStats_txtWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardStats_txtLast"
                android:text="@string/measurement_detail_weight"
                style="@style/GymRatTheme.Measure.History.Text.Name"/>

            <TextView
                android:id="@+id/cardStats_txtWeightLast"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardStats_txtLast"
                android:text="1000"
                style="@style/GymRatTheme.Measure.History.Text.Data.Start"/>

            <TextView
                android:id="@+id/cardStats_txtWeightChangeLast"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cardStats_txtWeightLast"
                android:layout_below="@id/cardStats_txtLast"
                android:text="100%"
                style="@style/GymRatTheme.Measure.History.Text.Data"/>

            <TextView
                android:id="@+id/cardStats_txtWeightChangeStart"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cardStats_txtWeightChangeLast"
                android:layout_below="@id/cardStats_txtLast"
                android:text="100%"
                style="@style/GymRatTheme.Measure.History.Text.Data"/>

            <!-- Measurement Body Fat -->
            <TextView
                android:id="@+id/cardStats_txtBodyFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardStats_txtWeight"
                android:text="@string/measurement_detail_body_fat"
                style="@style/GymRatTheme.Measure.History.Text.Name"/>

            <TextView
                android:id="@+id/cardStats_txtBodyFatLast"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardStats_txtWeight"
                android:text="1000"
                style="@style/GymRatTheme.Measure.History.Text.Data.Start"/>

            <TextView
                android:id="@+id/cardStats_txtBodyFatChangeLast"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cardStats_txtBodyFatLast"
                android:layout_below="@id/cardStats_txtWeight"
