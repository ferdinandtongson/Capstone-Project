            <TextView
                android:id="@+id/cardStats_txtBodyFatChangeStart"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cardStats_txtBodyFatChangeLast"
                android:layout_below="@id/cardStats_txtWeight"
