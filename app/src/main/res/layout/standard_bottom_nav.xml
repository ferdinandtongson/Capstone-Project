<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choiceCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/orange_background"
    style="@style/ChoiceTheme.Activity">

    <include
        layout="@layout/toolbar_title"
        android:visibility="visible"
        app:layout_scrollFlags="scroll|enterAlways"/>

    <FrameLayout android:id="@+id/choiceFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:paddingBottom="55dp"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/choiceBottomNavigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/orange"
        app:itemIconTint="@color/powderBlueish"
        app:itemTextColor="@color/powderBlueish"/>

</android.support.design.widget.CoordinatorLayout>