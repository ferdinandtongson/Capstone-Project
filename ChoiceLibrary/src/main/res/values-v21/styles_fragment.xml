<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ChoiceTheme.Fragment"  parent="Theme.AppCompat.Light">
        <item name="android:layout_marginLeft">@dimen/fragment_outside_margin</item>
        <item name="android:layout_marginRight">@dimen/fragment_outside_margin</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ChoiceTheme.Fragment.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fragment_title_font_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_centerHorizontal">false</item>
        <item name="android:layout_centerVertical">false</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:visibility">visible</item>
    </style>

</resources>